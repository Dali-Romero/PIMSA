<div class="row p-3" id="machine-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-gear-wide-connected"></i> Máquinas</h1>
</div>
<div class="row p-4">
    <div class="row justify-content-between p-0 m-0" id="machine-add-title">
        <div class="col-md-8 p-2">
            <p class="fs-5 m-0">Máquinas registradas</p>
        </div>
        <div class="col-md-4 p-2">
            <div class="row justify-content-md-end" id="machines-total">
                <div class="col-6 col-md-4">
                    <p class="fs-5 m-0 text-success">Activas: {{activas}}</p>
                </div>
                <div class="col-6 col-md-4">
                    <p class="fs-5 m-0 text-danger">Inactivas: {{inactivas}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row px-4 pt-0 pb-4">
    <div class="table-responsive-xxl p-0">
        <table class="table table-striped align-middle" id="machines-table">
            <thead>
                <tr>
                    <th scope="col">No. Serie</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Tipo cabezal</th>
                    <th scope="col">No. Cabezales</th>
                    <th scope="col">Velocidad (<var>Mt²/h</var>)</th>
                    <th scope="col">Tipo tinta</th>
                    <th scope="col">Con. Técnico</th>
                    <th scope="col">Estatus</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each machines}}
                    <tr>
                        <th scope="row">{{numSerie}}</th>
                        <td>{{marca}}</td>
                        <td>{{nombre}}</td>
                        <td>{{tipoCabezal}}</td>
                        <td>{{numCabezales}}</td>
                        <td>{{velocidad}}</td>
                        <td>{{tipoTinta}}</td>
                        <td>{{conTecnicoExt}}-{{conTecnico}}</td>
                        {{#if activo}}
                            <td class="text-success">Activa</td>
                        {{else}}
                            <td class="text-danger">Inactiva</td>
                        {{/if}}
                        <td>
                            <div class="row g-2">
                                <div class="col-md-5">
                                    <button class="btn btn-sm btn-outline-primary w-100" id="btnExpandUsers" value="{{maquinaId}}" type="button" data-bs-toggle="button" aria-pressed="true" aria-expanded="false"><i class="bi bi-person-fill-gear"></i></button>
                                </div>
                                <div class="col-md-5">
                                    {{#checkPermission ../user.permisos "editMachines"}}
                                        <a href="/machines/edit/{{maquinaId}}" class="btn btn-sm btn-secondary w-100" role="button"><i class="bi bi-pencil-square"></i></a>
                                    {{else}}
                                        <span class="d-inline-block w-100" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                            <a href="/machines/edit/{{maquinaId}}" class="btn btn-sm btn-secondary w-100 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-pencil-square"></i></a>
                                        </span>
                                    {{/checkPermission}}
                                </div>
                            </div>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="10">No existen máquinas registradas</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Button (add machine) that will be added when the table is rendered --}}
<div class="d-none" id="machines-add-button">
    {{#checkPermission user.permisos "addMachines"}}
        <a href="/machines/add" class="btn btn-outline-success border-success border-2 float-md-end mb-3 mb-md-0" role="button"><i class="bi bi-patch-plus-fill"></i> Añadir máquina</a>
    {{else}}
        <span class="d-inline-block float-md-end mb-3 mb-md-0" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
            <a href="/machines/add" class="btn btn-outline-success border-success border-2 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-patch-plus-fill"></i> Añadir máquina</a>
        </span>
    {{/checkPermission}}
</div>

{{!-- Templates --}}
<script type="text/x-handlebars-template" id="machines-users-expand">
    <div class="machines-users-slider" style="display: none;">
        <div class="row p-3 pb-0 m-0 text-center">
            <p class="fs-5 fw-bold p-1 m-0">Usuarios autorizados a utilizar \{{#with machine}} \{{nombre}} \{{/with}}</p>
        </div>
        <div class="row row-cols-3 row-cols-md-5 g-4 p-3 justify-content-md-start">
            \{{#each assignedUsers}}
                <div class="col">
                    <div class="card h-100 border-2" style="background-color: #f1f7fd; border-color: #75b2e5;">
                        <div class="row g-0 align-items-center h-100">
                            <div class="col-3 position-relative">
                                <i class="bi bi-person-fill-lock position-absolute top-50 start-50 translate-middle" style="font-size: 2.5em;"></i>
                            </div>
                            <div class="col-9">
                                <div class="card-body p-3 ps-0">
                                    \{{#checkPermission ../permissions "seeListEmployees"}}
                                        <a class="icon-link icon-link-hover link-underline link-underline-opacity-0 fw-medium" style="--bs-icon-link-transform: translate3d(0, -.15rem, 0); --bs-link-hover-color-rgb: 237, 10, 63;" href="/employees/info/\{{empleadoId}}">
                                            <i class="bi bi-box-arrow-in-up-right mb-1"></i>
                                            \{{Empleado}}
                                        </a>
                                    \{{else}}
                                        <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                            <a class="icon-link link-underline link-underline-opacity-0 fw-medium pe-none" style="--bs-link-opacity: .80;">
                                                <i class="bi bi-box-arrow-in-up-right mb-1"></i>
                                                \{{Empleado}}
                                            </a>
                                        </span>
                                    \{{/checkPermission}}
                                    <p class="card-text"><small class="fw-light">\{{Area}}</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            \{{else}}
                <div class="col-md-12">
                    <div class="card border-2" style="background-color: #f1f7fd; border-color: #75b2e5;">
                        <div class="card-body">
                            <p class="card-text text-center">No existen usuarios autorizados para utilizar esta máquina</p>
                        </div>
                    </div>
                </div>
            \{{/each}}
        </div>
    </div>
</script>