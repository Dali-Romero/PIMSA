<div class="container-fluid">
    <div class="row p-3" id="machine-title">
        <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-clipboard2"></i> productos</h1>
    </div>
    <div class="row p-4">
        <div class="row justify-content-between p-0 m-0" id="machine-add-title">
            <div class="col-md-8 p-2">
                <p class="fs-5 m-0">Productos registrados.</p>
            </div>
        </div>
    </div>
    <div class="row p-4 pt-0">
        <div class="table-responsive-xxl p-0">
            <table class="table table-striped align-middle text-center" id="tabla_productos">
                <thead>
                    <tr>
                        <th scope="col">Codigo</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Detalles</th>
                        <th scope="col">Unidad de Medida</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Descuento</th>
                        <th scope="col">Proceso</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each products}}
                        <tr>
                            <th scope="row">P-{{productoId}}</th>
                            <th>{{nombre}}</th>
                            <th>{{descripcion}}</th>
                            <th>{{unidad}}</th>
                            <th>{{precio}}</th>
                            <th>{{porcentaje}}</th>
                            {{#each ../procesos}}
                                {{#equal ../proceso_id procesoId}}<th>{{nombre}}</th>{{/equal}}
                            {{/each}}
                            <th>
                                {{#checkPermission ../user.permisos "editRoles"}}
                                    <a href="/products/edit/{{productoId}}" class="btn btn-sm btn-secondary" role="button"><i class="bi bi-pencil-square"></i> Editar</a>
                                {{else}}
                                    <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                        <a href="/roles/edit/{{rolId}}" class="btn btn-sm btn-secondary disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-pencil-square"></i> Editar</a>
                                    </span>
                                {{/checkPermission}}
                            </th>
                        </tr>
                    {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="10">No existen productos registrados.</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

{{!-- Button (add product) that will be added when the table is rendered --}}
<div class="d-none" id="products-add-button">
    {{#checkPermission user.permisos "addProducts"}}
        <a href="/products/add" class="btn btn-outline-success border-success border-2 float-md-end mb-3 mb-md-0" role="button"><i class="bi bi-clipboard2-plus"></i> Añadir producto</a>
    {{else}}
        <span class="d-inline-block float-md-end mb-3 mb-md-0" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
            <a href="/products/add" class="btn btn-outline-success border-success border-2 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-clipboard2-plus"></i> Añadir producto</a>
        </span>
    {{/checkPermission}}
</div>

<script>
    var table = new DataTable('#tabla_productos', {
        paging: false,
        info: false,
        padding: false,
        order: [],
        dom: '<"row pb-2"<"col-12 col-md-6 order-last order-md-first"<"float-start"f>><"col-12 col-md-6 order-first order-md-last"<"button-add-product"B>>><"row"<"col-sm-12"tr>>',
        columnDefs: [
            {className: "dt-center", targets: "_all"}
        ],
        fnInitComplete: function(){
            // añadir boton para agregar roles
            const addProductbtn = $('#products-add-button').clone().removeClass('d-none');
            $('div.button-add-product').html(addProductbtn);
        },
        language:{
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json',
        },
    })
</script>