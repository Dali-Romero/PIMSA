
    <div class="row p-3" id="machine-title">
        <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-person-fill"></i>usuarios</h1>
    </div>
    <div class="row p-4">
        <div class="row justify-content-between p-0 m-0" id="machine-add-title">
            <div class="col-md-8 p-2">
                <p class="fs-5 m-0">Usuarios registrados.</p>
            </div>
            <div class="col-md-4 p-2">
                <div class="row justify-content-md-end" id="machines-total">
                    <div class="col-4">
                        <p class="fs-5 m-0 text-success">Activos: {{activos}}</p>
                    </div>
                    <div class="col-4">
                        <p class="fs-5 m-0 text-danger">Inactivos: {{inactivos}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row p-4 pt-0">
        <div class="table-responsive-xxl p-0">
            <table class="table table-striped align-middle text-center" id="tabla_usuarios">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Correo</th>
                        <th scope="col">Rol</th>
                        <th scope="col">Empleado</th>
                        <th scope="col">Estatus</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {{#each users}}
                        <tr>
                            <th>{{nombre}}</th>
                            <th>{{apellido}}</th>
                            <th>{{correoElec}}</th>
                            {{#each ../roles}}
                                {{#equal ../rol_id rolId}}<th>{{nombre}}</th>{{/equal}}
                            {{/each}}
                            {{#each ../empleados}}
                                {{#equal ../empleado_id empleadoId}}<th>{{nombreComp}}</th>{{/equal}}
                            {{/each}}
                            {{#if activo}}
                                <td class="text-success">Activo</td>
                            {{else}}
                                <td class="text-danger">Inactivo</td>
                            {{/if}}
                            <th>
                                {{#checkPermission ../user.permisos "editUsers"}}
                                    <a href="/users/edit/{{usuarioId}}" class="btn btn-sm btn-secondary" role="button"><i class="bi bi-pencil-square"></i> Editar</a>
                                {{else}}
                                    <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                        <a href="/users/edit/{{usuarioId}}" class="btn btn-sm btn-secondary disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-pencil-square"></i> Editar</a>
                                    </span>
                                {{/checkPermission}}
                            </th>
                        </tr>
                    {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="10">No existen usuarios registrados.</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

{{!-- Button (add user) that will be added when the table is rendered --}}
<div class="d-none" id="users-add-button">
    {{#checkPermission user.permisos "addUsers"}}
        <a href="/users/add" class="btn btn-outline-success border-success border-2 float-md-end mb-3 mb-md-0" role="button"><i class="bi bi-person-fill-add"></i> Registrar usuario</a>
    {{else}}
        <span class="d-inline-block float-md-end mb-3 mb-md-0" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
            <a href="/users/add" class="btn btn-outline-success border-success border-2 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-person-fill-add"></i> Registrar usuario</a>
        </span>
    {{/checkPermission}}
</div>

<script>
    var table = new DataTable('#tabla_usuarios', {
        paging: false,
        info: false,
        padding: false,
        order: [],
        dom: '<"row pb-2"<"col-12 col-md-6 order-last order-md-first"<"float-start"f>><"col-12 col-md-6 order-first order-md-last"<"button-add-user"B>>><"row"<"col-sm-12"tr>>',
        columnDefs: [
            {className: "dt-center", targets: "_all"}
        ],
        fnInitComplete: function(){
            // a√±adir boton para agregar usuarios
            const addUserbtn = $('#users-add-button').clone().removeClass('d-none');
            $('div.button-add-user').html(addUserbtn);
        },
        language:{
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json',
        },
    })
</script>