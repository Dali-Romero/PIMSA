<div class="row p-3" id="group-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-people"></i>grupos de clientes</h1>
</div>

<div class="row p-4">
    <div class="row justify-content-between p-0 m-0" id="group-add-title">
        <div class="col-md-8 p-2">
            <p class="fs-5 m-0">Grupos registrados</p>
        </div>
    </div>
</div>

<div class="row p-4 pt-0">
    <div class="table-responsive-xxl p-0">
        <table class="table table-striped" id="groups_table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripci칩n</th>
                    <th scope="col">Miembros totales</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each groups}}
                    <tr>
                        <th scope="row">{{nombre}}</th>
                        <td>{{descripcion}}</td>
                        <td></td>
                        <td>
                            {{#checkPermission ../user.permisos "editClientsGroups"}}
                                <a href="/grupos/editgroup/{{grupoId}}" class="btn btn-sm btn-secondary" role="button"><i class="bi bi-pencil-square"></i> Editar</a>
                            {{else}}
                                <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                    <a  href="/grupos/editgroup/{{grupoId}}" class="btn btn-sm btn-secondary disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-pencil-square"></i> Editar</a>
                                </span>
                            {{/checkPermission}}
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="10">No existen grupos registrados.</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Button (add role) that will be added when the table is rendered --}}
<div class="d-none" id="groups-add-button">
    {{#checkPermission user.permisos "addClientsGroups"}}
        <a href="/grupos/addgroup" class="btn btn-outline-success border-success border-2 float-md-end mb-3 mb-md-0" role="button"><i class="bi bi-patch-plus-fill"></i> A침adir grupo</a>
    {{else}}
        <span class="d-inline-block float-md-end mb-3 mb-md-0" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
            <a href="/grupos/addgroup" class="btn btn-outline-success border-success border-2 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-patch-plus-fill"></i> A침adir grupo</a>
        </span>
    {{/checkPermission}}
</div>

<script>
    var table = new DataTable('#groups_table', {
        paging: false,
        info: false,
        padding: false,
        order: [],
        dom: '<"row pb-2"<"col-12 col-md-6 order-last order-md-first"<"float-start"f>><"col-12 col-md-6 order-first order-md-last"<"button-add-group"B>>><"row"<"col-sm-12"tr>>',
        columnDefs: [
            {className: "dt-center", targets: "_all"}
        ],
        fnInitComplete: function(){
            // a침adir boton para agregar grupos
            const addGroupsbtn = $('#groups-add-button').clone().removeClass('d-none');
            $('div.button-add-group').html(addGroupsbtn);
        },
        language:{
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json',
        },
    })
</script>