<div class="row pt-0 pb-4 px-2">
    <div class="col-md-12 pt-0">
        <ul class="nav nav-tabs bg-light" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="dashboard-quotations-tab" data-bs-toggle="tab" data-bs-target="#dashboard-quotations-pane" type="button" role="tab" aria-controls="dashboard-quotations-pane" aria-selected="true">Cotizaciones</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="dashboard-orders-tab" data-bs-toggle="tab" data-bs-target="#dashboard-orders-pane" type="button" role="tab" aria-controls="dashboard-orders-pane" aria-selected="true">Órdenes</button>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade show active" style="height: 42rem;" id="dashboard-quotations-pane" role="tabpanel" aria-labelledby="dashboard-quotations-tab" tabindex="0">
                <div class="table-responsive-xxl p-0">
                    <table class="stripe" id="dashboard-quotations-table" style="width: 100%;">
                        <thead>
                            <tr>
                                <th scope="col">No. Cotización</th>
                                <th scope="col">Fecha creación</th>
                                <th scope="col">Cliente</th>
                                <th scope="col">Monto total</th>
                                <th scope="col">Estatus</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each cotizaciones}}
                                <tr>
                                    <th scope="row">
                                        <a class="icon-link icon-link-hover link-underline link-underline-opacity-0" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0); --bs-link-hover-color-rgb: 237, 10, 63;" href="quotations/info/{{cotId}}">
                                            <i class="bi bi-box-arrow-in-up-right mb-auto"></i>
                                            COT-{{cotId}}
                                        </a>
                                    </th>
                                    <td>{{formatDateShort fecha}}</td>
                                    <td>
                                        <a class="icon-link icon-link-hover link-underline link-underline-opacity-0" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0); --bs-link-hover-color-rgb: 237, 10, 63;" href="clients/infoclient/{{clienteId}}">
                                            <i class="bi bi-box-arrow-in-up-right mb-auto"></i>
                                            {{nombre}}
                                        </a>
                                    </td>
                                    <td>$ {{formatNumber total}}</td>
                                    {{#equal estatus "Generada"}}
                                        <td class="text-info">{{estatus}}</td>
                                    {{/equal}}
                                    {{#equal estatus "Cancelada"}}
                                        <td class="text-danger">{{estatus}}</td>
                                    {{/equal}}
                                    {{#equal estatus "Ordenada"}}
                                        <td class="text-success">{{estatus}}</td>
                                    {{/equal}}
                                    {{#equal estatus "Espera"}}
                                        <td class="text-warning">En espera</td>
                                    {{/equal}}
                                </tr>
                            {{else}}
                                <tr>
                                    <td class="d-none"></td>
                                    <td class="d-none"></td>
                                    <td class="d-none"></td>
                                    <td class="d-none"></td>
                                    <td colspan="5">No existen cotizaciones registradas</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade" style="height: 42rem;" id="dashboard-orders-pane" role="tabpanel" aria-labelledby="dashboard-orders-tab" tabindex="0">
                <div class="table-responsive-xxl p-0">
                    <table class="stripe" id="dashboard-orders-table" style="width: 100%;">
                        <thead>
                            <tr>
                                <th scope="col">No. Orden</th>
                                <th scope="col">Fecha generación</th>
                                <th scope="col">Cliente</th>
                                <th scope="col">Monto total</th>
                                <th scope="col">Estatus</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each ordenes}}
                                <tr>
                                    <th scope="row">
                                        <a class="icon-link icon-link-hover link-underline link-underline-opacity-0" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0); --bs-link-hover-color-rgb: 237, 10, 63;" href="orders/info/{{ordenId}}">
                                            <i class="bi bi-box-arrow-in-up-right mb-auto"></i>
                                            OT-{{ordenId}}
                                        </a>
                                    </th>
                                    <td>{{formatDateShort fechaGen}}</td>
                                    <td>
                                        <a class="icon-link icon-link-hover link-underline link-underline-opacity-0" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0); --bs-link-hover-color-rgb: 237, 10, 63;" href="clients/infoclient/{{clienteId}}">
                                            <i class="bi bi-box-arrow-in-up-right mb-auto"></i>
                                            {{nombre}}
                                        </a>
                                    </td>
                                    <td>$ {{formatNumber total}}</td>
                                    {{#if terminada}}
                                        <td class="text-success">Terminada</td>
                                    {{else}}
                                        <td class="text-danger">En proceso</td>
                                    {{/if}}
                                </tr>
                            {{else}}
                                <tr>
                                    <td class="d-none"></td>
                                    <td class="d-none"></td>
                                    <td class="d-none"></td>
                                    <td class="d-none"></td>
                                    <td colspan="5">No existen ordenes registradas</td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 order-first order-md-last">
        
    </div>
</div>