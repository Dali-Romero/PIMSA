<div class="row p-3" id="machine-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-file-earmark-bar-graph"></i> Panel</h1>
</div>
<div class="row pt-4 pb-3 px-2">
    <div class="col-md-3 mb-4 mb-md-0">
        <div class="card text-bg-light border-secondary">
            <div class="card-body">
                <div class="row">
                    <div class="col-7 my-auto">
                        <h6 class="card-subtitle">
                            Empleados activos
                        </h6>
                        <h3 class="card-title mb-0 mt-1">
                            {{#with tarjetas}}
                                {{formatNumberAmount tarjEmpleados.total}}
                            {{/with}}
                        </h3>
                        <h6 class="card-subtitle text-body-secondary">
                            <small>
                                Global
                            </small>
                        </h6>
                    </div>
                    <div class="col-5">
                        <canvas id="chart1" style="height: 5.5rem;"></canvas>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 text-center">
                        {{#with tarjetas}}
                            {{#equalNR cambioEmpleados.percentage 0}}
                                <h6 class="text-primary mb-0">
                                    <i class="bi bi-caret-right-fill"></i> {{formatNumber cambioEmpleados.percentage}}% <span class="text-dark">desde el último mes</span>
                                </h6>
                            {{else}}
                                {{#greaterThan cambioEmpleados.percentage 0}}
                                    <h6 class="text-success mb-0">
                                        <i class="bi bi-caret-up-fill"></i> {{formatNumber cambioEmpleados.percentage}}% <span class="text-dark">desde el último mes</span>
                                    </h6>
                                {{else}}
                                    <h6 class="text-danger mb-0">
                                        <i class="bi bi-caret-down-fill"></i> {{formatNumber cambioEmpleados.percentage}}% <small class="text-dark">desde el último mes</small>
                                    </h6>
                                {{/greaterThan}}
                            {{/equalNR}}
                        {{/with}}
                    </div>
                </div>
            </div>
        </div>
    </div>
