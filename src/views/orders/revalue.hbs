<div class="row p-3" id="machine-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-journal-bookmark-fill"></i> Órdenes</h1>
</div>
<div class="row p-4">
    <p class="fs-5 p-2 m-0" id="machine-add-title">Revaluar orden</p>
</div>
<div class="row px-4">
    <form action="/orders/revalue/{{#with cotizacion}}{{ordenId}}{{/with}}" method="post" class="needs-validation" id="form-revalue-quotation" novalidate>
        <div class="row mb-4 gy-4 justify-content-md-between">
            <div class="col-md-3 p-0 h-100">
                <div class="row mb-2 m-0 text-center bg-danger text-white">
                    <p class="fs-6 p-1 m-0">Información general</p>
                </div>
                {{#with cotizacion}}
                    <input class="d-none" name="revalueorderid" value="{{ordenId}}" type="text">
                    <div class="row py-2 px-0">
                        <label for="revalueclientid" class="form-label">Nombre del cliente:</label>
                        <div class="input-group">
                            <select name="revalueclientid" id="revalueclientid" class="form-select border-dark-subtle border-2 text-dark-emphasis" disabled>
                                <option value="{{clienteId}}" >{{nombre}}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row py-2 px-0">
                        <label for="revaluenameapplicant" class="form-label">Nombre del solicitante:</label>
                        <div class="input-group">
                            <span class="input-group-text border-dark-subtle border-2 border-end-0 rounded-end-0"><i class="bi bi-person-vcard"></i></span>
                            <input type="text" name="revaluenameapplicant" value="{{solicitante}}" id="revaluenameapplicant" class="form-control border-dark-subtle border-2 rounded-end text-dark-emphasis" disabled>
                        </div>
                    </div>
                    <div class="row py-2 px-0">
                        <label for="revaluenameproyect" class="form-label">Nombre del proyecto:</label>
                        <div class="input-group">
                            <span class="input-group-text border-dark-subtle border-2 border-end-0 rounded-end-0"><i class="bi bi-folder2-open"></i></span>
                            <input type="text" name="revaluenameproyect" value="{{proyecto}}" id="revaluenameproyect" class="form-control border-dark-subtle border-2 rounded-end text-dark-emphasis" disabled>
                        </div>
                    </div>
                    <div class="row py-2 px-0">
                        <label for="revaluediscountop1" class="form-label">¿Aplicar descuento?</label>
                        <div class="row row-cols-3 m-0 p-0 justify-content-md-start">
                            <div class="col-3 h-100">
                                <input type="radio" name="revaluediscount" id="revaluediscountop1" class="btn-check" autocomplete="off" {{#greaterThan porcentajeDescuento '0'}}checked{{/greaterThan}}>
                                <label for="revaluediscountop1" class="btn btn-outline-success w-100 border-success border-2">Si</label>
                            </div>
                            <div class="col-3 h-100">
                                <input type="radio" name="revaluediscount" id="revaluediscountop2" class="btn-check" autocomplete="off" {{#greaterThan porcentajeDescuento '0'}}{{else}}checked{{/greaterThan}}>
                                <label for="revaluediscountop2" class="btn btn-outline-danger w-100 border-danger border-2">No</label>
                            </div>
                            <div class="col-6 h-100">
                                <div class="input-group has-validation">
                                    <input type="text" name="revaluenumdiscount" value="{{porcentajeDescuento}}" data-maxDiscount="{{maxDescuento}}" id="revaluenumdiscount" class="form-control border-dark border-2" placeholder="Desc." {{#greaterThan porcentajeDescuento '0'}}{{else}}disabled{{/greaterThan}} required>
                                    <span class="input-group-text border-dark border-2 border-start-0 rounded-end"><i class="bi bi-percent"></i></span>
                                    <div class="valid-feedback">
                                        ¡Perfecto!
                                    </div>
                                    <div class="invalid-feedback">
                                        <span id="invalid-feedback-revaluenumdiscount"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row py-2 px-0 mb-3">
                        <label for="revalueobservations" class="form-label">Observaciones:</label>
                        <div class="input-group has-validation">
                            <span class="input-group-text border-dark border-2 border-end-0"><i class="bi bi-info-square"></i></span>
                            <textarea class="form-control border-dark border-2 rounded-end" name="revalueobservations" id="revalueobservations" rows="5" required>{{observaciones}}</textarea>
                            <div class="valid-feedback">
                                ¡Perfecto!
                            </div>
                            <div class="invalid-feedback">
                                <span id="invalid-feedback-revalueobservations"></span>
                            </div>
                        </div>
                    </div>
                {{/with}}
            </div>
            <div class="col-md-8 h-100">
                <div class="row text-center bg-danger text-white">
                    <p class="fs-6 p-1 m-0">Información de los productos</p>
                </div>
                <div class="row justify-content-md-between">
                    <div class="row my-4 m-0 p-0">
                        <div class="col-8 p-0">
                            <div class="input-group">
                                <button class="btn btn-primary border-secondary border-2 border-end-0 rounded-end-0" id="revaluecotbtn" type="button" disabled>Cotizar</button>
                                <select class="form-select border-dark-subtle border-2 rounded-end text-dark-emphasis" id="revaluenameproduct" disabled>
                                    <option value="">No es posible cotizar productos</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-4 p-0 align-self-start text-end">
                            <button class="btn btn-outline-secondary border-secondary border-2" id="revalueoutCatalog" type="button" disabled><i class="bi bi-bag-x"></i> <span class="d-md-inline d-none">Fuera de catálogo</span></button>
                        </div>
                    </div>
                    <div class="row m-0 p-0 justify-content-md-between" id="revalue-products-cards-container">
                        {{#each productos}}
                            <div class="row m-0 p-0">
                                <div class="col-md-12 p-0">
                                    <div class="card mb-4">
                                        <div class="card-header text-bg-light">
                                            <div class="row m-0 align-items-center">
                                                <div class="col-8">
                                                    <p class="card-title m-0"><b>Producto:</b> {{nombre}}</p>
                                                    <input class="d-none" name="revaluenameproduct{{@index}}" value="{{nombre}}" type="text">
                                                    <input class="d-none" name="revalueproductId{{@index}}" type="text" value="{{prodCotizadoId}}">
                                                    <input class="d-none" name="revalueisoutcatalog{{@index}}" type="text" value="{{fueraCatalogo}}">
                                                </div>
                                                <div class="col-4 text-end">
                                                    <button class="btn btn-danger btn-sm" type="button" disabled><i class="bi bi-trash3"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row m-0 gy-md-0 justify-content-md-between">
                                                <div class="col-md-4">
                                                    <div class="row row-cols-3 justify-content-md-start">
                                                        <div class="col-md-4 d-grid">
                                                            <input type="radio" name="revalueunitproduct{{@index}}" class="btn-check" id="revalueunitproduct{{@index}}op1" value="Pieza" autocomplete="off" {{#equal unidad "Pieza"}} checked {{/equal}} disabled>
                                                            <label for="revalueunitproduct{{@index}}op1" class="btn btn-sm btn-outline-primary border-2">Pieza</label>
                                                        </div>
                                                        <div class="col-md-4 d-grid">
                                                            <input type="radio" name="revalueunitproduct{{@index}}" class="btn-check" id="revalueunitproduct{{@index}}op2" value="Mt" autocomplete="off" {{#equal unidad "Mt"}} checked {{/equal}} disabled>
                                                            <label for="revalueunitproduct{{@index}}op2" class="btn btn-sm btn-outline-primary border-2">Mt²</label>
                                                        </div>
                                                        <div class="col-md-4 d-grid">
                                                            <input type="radio" name="revalueunitproduct{{@index}}" class="btn-check" id="revalueunitproduct{{@index}}op3" value="Millar" autocomplete="off" {{#equal unidad "Millar"}} checked {{/equal}} disabled>
                                                            <label for="revalueunitproduct{{@index}}op3" class="btn btn-sm btn-outline-primary border-2 ">Millar</label>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3 pt-md-0 pt-4">
                                                    <div class="input-group input-group-sm">
                                                        <span class="input-group-text border-dark border-2 border-end-0"><i class="bi bi-currency-dollar"></i></span>
                                                        <input type="number" name="revaluepriceproduct{{@index}}" min="1" value="{{precio}}" class="form-control border-dark border-2 rounded-end revaluepriceoutproduct" required>
                                                        <div class="valid-feedback">
                                                            ¡Perfecto!
                                                        </div>
                                                        <div class="invalid-feedback">
                                                            <span class="invalid-feedback-revaluepriceproduct"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row m-0 gy-4 justify-content-md-between">
                                                <div class="col-md-2">
                                                    <label for="revaluequantityproduct{{@index}}" class="form-label">Cantidad:</label>
                                                    <div class="input-group input-group-sm">
                                                        <span class="input-group-text border-dark-subtle border-2 border-end-0 rounded-end-0"><i class="bi bi-hash"></i></span>
                                                        <input type="number" min="1" name="revaluequantityproduct{{@index}}" id="revaluequantityproduct{{@index}}" value="{{cantidad}}" class="form-control border-dark-subtle border-2 rounded-end text-dark-emphasis" disabled>
                                                    </div>
                                                </div>
                                                <div class="col-md-7">
                                                    <div class="row gy-4 justify-content-md-between">
                                                        <div class="col-md-6">
                                                            <label for="revaluecoatingproduct{{@index}}" class="form-label">Acabados:</label>
                                                            <div class="input-group input-group-sm">
                                                                <button class="btn btn-outline-primary border-primary border-2 rounded-end-0" type="button" disabled><i class="{{#equal acabados 'Sin acabados'}}bi bi-toggle2-off{{else}}bi bi-toggle2-on{{/equal}}"></i></button>
                                                                <input type="text" name="revaluecoatingproduct{{@index}}" id="revaluecoatingproduct{{@index}}" value="{{acabados}}" class="form-control border-dark-subtle border-2 border-start-0 rounded-end text-dark-emphasis" disabled>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label for="revaluefileproduct{{@index}}" class="form-label">Archivo:</label>
                                                            <div class="input-group input-group-sm">
                                                                <button class="btn btn-outline-primary border-primary border-2 rounded-end-0" type="button" disabled><i class="{{#equal archivo 'Sin archivo'}}bi bi-toggle2-off{{else}}bi bi-toggle2-on{{/equal}}"></i></button>
                                                                <input type="text" name="revaluefileproduct{{@index}}" id="revaluefileproduct{{@index}}" value="{{archivo}}" class="form-control border-dark-subtle border-2 border-start-0 rounded-end text-dark-emphasis" disabled>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    {{#equal unidad 'Mt'}}
                                                        <div class="row row-cols-2 justify-content-md-start">
                                                            <div class="col-md-6 h-100">
                                                                <label for="revaluelengthproduct{{@index}}" class="form-label">Largo:</label>
                                                                <div class="input-group input-group-sm">
                                                                    <input type="text" name="revaluelengthproduct{{@index}}" id="revaluelengthproduct{{@index}}" value="{{largo}}" class="form-control border-dark-subtle border-2 rounded text-dark-emphasis" placeholder="Mt" disabled>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6 h-100">
                                                                <label for="revaluewidthproduct{{@index}}" class="form-label">Ancho:</label>
                                                                <div class="input-group input-group-sm">
                                                                    <input type="text" name="revaluewidthproduct{{@index}}" id="revaluewidthproduct{{@index}}" value="{{ancho}}" class="form-control border-dark-subtle border-2 rounded text-dark-emphasis" placeholder="Mt" disabled>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {{else}}
                                                        <div class="row row-cols-2 justify-content-md-start d-none">
                                                            <div class="col-md-6 h-100">
                                                                <label for="revaluelengthproduct{{@index}}" class="form-label">Largo:</label>
                                                                <div class="input-group input-group-sm">
                                                                    <input type="text" name="revaluelengthproduct{{@index}}" id="revaluelengthproduct{{@index}}" value="0" class="form-control border-dark-subtle border-2 rounded text-dark-emphasis" placeholder="Mt" disabled>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6 h-100">
                                                                <label for="revaluewidthproduct{{@index}}" class="form-label">Ancho:</label>
                                                                <div class="input-group input-group-sm">
                                                                    <input type="text" name="revaluewidthproduct{{@index}}" id="revaluewidthproduct{{@index}}" value="0" class="form-control border-dark-subtle border-2 rounded text-dark-emphasis" placeholder="Mt" disabled>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {{/equal}}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
                <div class="row mb-2 justify-content-end text-end">
                    <div class="col-md-6 p-0">
                        <button class="btn btn-danger me-4" type="reset">Restablecer valores</button>
                        <button class="btn btn-success" type="submit">Vista previa</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

{{!-- Modal preview --}}
<div class="modal fade" id="revalue-preview-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <p class="modal-title fs-3">Vista previa</p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="revalue-preview-container">
                {{!-- The quote information will be added here --}}
            </div>
            <div class="modal-footer">
                <a href="/orders" class="btn btn-danger" role="button">Cancelar</a>
                <button type="submit" class="btn btn-success" id="send-revalue">Cotizar</button>
            </div>
        </div>
    </div>
</div>

{{!-- Templates --}}
<script type="text/x-handlebars-template" id="revalue-preview">
    <div class="row p-4 gy-4 justify-content-md-between">
        <div class="col-md-5">
            <div class="row">
                <img src="/img/PIMSAlogo.png" alt="Logo PIMSA" class="img-fluid d-block mx-auto">
            </div>
            <div class="row mt-4">
                <div class="row m-0 text-center bg-danger text-white">
                    <p class="fs-6 p-2 m-0">Información de la cotización</p>
                </div>
                <table class="table table-responsive-md align-middle table-light m-0">
                    <tbody>
                        \{{#with cotizacion}}
                            <tr>
                                <th scope="row">Fecha:</th>
                                <td>\{{formatDate fecha}}</td>
                                <th scope="row">Estatus:</th>
                                <td>\{{estatus}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Proyecto:</th>
                                <td colspan="3">\{{proyecto}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Solicitante:</th>
                                <td colspan="3">\{{solicitante}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Empleado:</th>
                                <td colspan="3">\{{empleado}}</td>
                            </tr>
                        \{{else}}
                            <tr>
                                <td colspan="4" class="text-center">No existe información sobre la cotización</td>
                            </tr>
                        \{{/with}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="row m-0 text-center bg-danger text-white">
                    <p class="fs-6 p-2 m-0">Información del cliente</p>
                </div>
                <table class="table table-responsive-md align-middle table-light m-0">
                    <tbody>
                        \{{#with cliente}}
                            <tr>
                                <th scope="row" class="col-md-3">Cliente:</th>
                                <td colspan="3">\{{nombre}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Empresa:</th>
                                <td colspan="3">\{{razonSocial}}</td>
                            </tr>
                            <tr>
                                <th scope="row">RFC:</th>
                                <td colspan="3">\{{rfc}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Estado:</th>
                                <td>\{{domEstado}}</td>
                                <th scope="row" class="col-md-2">Municipio:</th>
                                <td>\{{domCiudad}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Colonia:</th>
                                <td>\{{domColonia}}</td>
                                <th scope="row">Código postal:</th>
                                <td>\{{domCp}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Calle:</th>
                                <td>\{{domCalle}}</td>
                                <th scope="row">Número:</th>
                                <td>\{{domNumEx}} \{{#if domNumIn}}Int \{{domNumIn}}\{{/if}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Teléfono:</th>
                                <td colspan="3">\{{#if telefonoExt}}Ext \{{telefonoExt}}\{{/if}} \{{telefono}}</td>
                            </tr>
                            <tr>
                                <th scope="row">Correo electrónico:</th>
                                <td colspan="3">\{{correoElec}}</td>
                            </tr>
                        \{{else}}
                            <td colspan="4" class="text-center">No existe información sobre el cliente</td>
                        \{{/with}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row p-4 pt-0 justify-content-md-between">
        <div class="row m-0 text-center bg-danger text-white">
            <p class="fs-6 p-2 m-0">Información de los productos</p>
        </div>
        <div class="table-responsive overflow-y-auto p-0">
            <table class="table table-responsive-md align-middle table-light">
                <thead>
                    <tr>
                        <th scope="col" class="text-center">Cantidad</th>
                        <th scope="col">Producto</th>
                        <th scope="col">Precio por unidad</th>
                        <th scope="col">Dimensiones</th>
                        <th scope="col">Precio c/u</th>
                        <th scope="col">Monto</th>
                    </tr>
                </thead>
                <tbody>
                    \{{#each productos}}
                        \{{#equal revalueunitproduct "Mt"}}
                            <tr>
                                <th scope="row" class="text-center">\{{revaluequantityproduct}}</th>
                                <td>
                                    <div class="row mb-2 mb-md-0">
                                        <div class="col-md-3">
                                            <b>Producto:</b> 
                                        </div>
                                        <div class="col-md-6">
                                            \{{revaluenameproduct}}
                                        </div>
                                    </div>
                                    <div class="row mb-2 mb-md-0">
                                        <div class="col-md-3">
                                            <b>Acabados:</b>
                                        </div>
                                        <div class="col-md-6">
                                            \{{revaluecoatingproduct}}
                                        </div>
                                    </div>
                                    <div class="row mb-2 mb-md-0">
                                        <div class="col-md-3">
                                            <b>Archivo:</b>
                                        </div>
                                        <div class="col-md-6">
                                            \{{revaluefileproduct}}
                                        </div>
                                    </div>
                                </td>
                                <td>$ \{{formatNumber revaluepriceproduct}} (x \{{revalueunitproduct}}²)</td>
                                <td>
                                    <div class="row m-0">
                                        \{{formatNumberMeasure revaluemeasure}} mts²
                                    </div>
                                    <div class="row m-0">
                                        (L) \{{formatNumberMeasure revaluelengthproduct}} mts x (A) \{{formatNumberMeasure revaluewidthproduct}} mts
                                    </div>
                                </td>
                                <td>$ \{{formatNumber revaluepriceach}}</td>
                                <td>$ \{{formatNumber revalueamount}}</td>
                            </tr>
                        \{{else}}
                            <tr>
                                <th scope="row" class="text-center">\{{revaluequantityproduct}}</th>
                                <td>
                                    <div class="row mb-2 mb-md-0">
                                        <div class="col-md-3">
                                            <b>Producto:</b> 
                                        </div>
                                        <div class="col-md-6">
                                            \{{revaluenameproduct}}
                                        </div>
                                    </div>
                                    <div class="row mb-2 mb-md-0">
                                        <div class="col-md-3">
                                            <b>Acabados:</b>
                                        </div>
                                        <div class="col-md-6">
                                            \{{revaluecoatingproduct}}
                                        </div>
                                    </div>
                                    <div class="row mb-2 mb-md-0">
                                        <div class="col-md-3">
                                            <b>Archivo:</b>
                                        </div>
                                        <div class="col-md-6">
                                            \{{revaluefileproduct}}
                                        </div>
                                    </div>
                                </td>
                                <td>$ \{{formatNumber revaluepriceproduct}} (x \{{revalueunitproduct}})</td>
                                <td>No aplica</td>
                                <td>$ \{{formatNumber revaluepriceproduct}}</td>
                                <td>$ \{{formatNumber revalueamount}}</td>
                            </tr>
                        \{{/equal}}
                    \{{else}}
                        <tr>
                            <td colspan="6" class="text-center">No existen productos cotizados</td>
                        </tr>
                    \{{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row p-4 gy-4 pt-0 justify-content-md-between">
        <div class="col-md-8 p-0">
            \{{#with cotizacion}}
                <p class="fs-6"><b>Observaciones:</b></p>
                \{{observaciones}}
            \{{else}}
                <p class="fs-6"><b>Sin información sobre las observaciones</b></p>
            \{{/with}}
        </div>
        <div class="col-md-3 p-0">
            \{{#with cotizacion}}
                <table class="table-responsive-md align-middle table-light w-100">
                    <tbody>
                        <tr>
                            <th scope="row" class="text-start">Bruto:</th>
                            <td class="text-end">$ \{{formatNumber totalBruto}}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">Descuento (\{{formatNumber porcentajeDescuento}} %):</th>
                            <td class="text-end">- $ \{{formatNumber descuento}}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">Subtotal:</th>
                            <td class="text-end">$ \{{formatNumber subtotal}}</td>
                        </tr>
                        <tr>
                            <th scope="row" class="text-start">IVA (16 %):</th>
                            <td class="text-end">+ $ \{{formatNumber iva}}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="row m-0 pt-4">
                    <div class="col-md-12 p-0 text-center border border-dark border-2">
                        <p class="fs-4 p-2 m-0 pb-0">Total:</p>
                        <p class="fs-4 p-2 m-0 pt-0">$ \{{formatNumber total}}</p>
                    </div>
                </div>
            \{{else}}
                <td class="2">No existe información sobre la cotización</td>
            \{{/with}}
        </div>
    </div>
</script>