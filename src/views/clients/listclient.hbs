<div class="row p-3" id="client-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-people-fill"></i> clientes</h1>
</div>
<div class="row p-4">
    <div class="row justify-content-between p-0 m-0" id="client-add-title">
        <div class="col-md-8 p-2">
            <p class="fs-5 m-0">Clientes registrados</p>
        </div>
        <div class="col-md-4 p-2">
            <div class="row justify-content-md-end" id="clients-total">
                <div class="col-4">
                    <p class="fs-5 m-0 text-success">Activos: {{activos}}</p>
                </div>
                <div class="col-4">
                    <p class="fs-5 m-0 text-danger">Inactivos: {{inactivos}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row px-4 pt-0 pb-4">
    <div class="table-responsive-xxl p-0">
        <table class="table table-striped align-middle" id="clients-table">
            <thead>
                <tr>
                    <th scope="col">RFC</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Correo Electrónico</th>
                    <th scope="col">Grupo</th>
                    <th scope="col">Estatus</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each clients}}
                    <tr>
                        <th scope="row">{{rfc}}</th>
                        <td>{{nombre}}</td>
                        <td>{{telefonoExt}}-{{telefono}}</td>
                        <td>{{correoElec}}</td>
                        {{#each ../group}}
                            {{#equal ../grupo_id grupoId}} <th>{{nombre}}</th>{{/equal}}
                        {{/each}}
                        {{#if activo}}
                            <td class="text-success">Activo</td>
                        {{else}}
                            <td class="text-danger">Inactivo</td>
                        {{/if}}
                        <th>
                            <a href="/clients/infoclient/{{clienteId}}" class="btn btn-sm btn-secondary"><i class="bi bi-person-vcard-fill"></i> información completa</a>
                        </th>
                    </tr>
                {{else}}
                    <tr>
                        
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="7">No existen clientes registrados.</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Button (add client) that will be added when the table is rendered --}}
<div class="d-none" id="clients-add-button">
    {{#checkPermission user.permisos "addClients"}}
        <a href="/clients/addclient" class="btn btn-outline-success border-success border-2 float-md-end mb-3 mb-md-0" role="button"><i class="bi bi-patch-plus-fill"></i> Añadir cliente</a>
    {{else}}
        <span class="d-inline-block float-md-end mb-3 mb-md-0" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
            <a href="/clients/addclient" class="btn btn-outline-success border-success border-2 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-patch-plus-fill"></i> Añadir cliente</a>
        </span>
    {{/checkPermission}}
</div>

<script>
    var table = new DataTable('#clients-table', {
        paging: false,
        info: false,
        padding: false,
        order: [],
        dom: '<"row pb-2"<"col-12 col-md-6 order-last order-md-first"<"float-start"f>><"col-12 col-md-6 order-first order-md-last"<"button-add-client"B>>><"row"<"col-sm-12"tr>>',
        columnDefs: [
            {className: "dt-center", targets: "_all"},
        ],
        fnInitComplete: function(){
            // añadir boton para agregar clientes
            const addClientbtn = $('#clients-add-button').clone().removeClass('d-none');
            $('div.button-add-client').html(addClientbtn);
        },
        language:{
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json',
        },
    });
</script>

