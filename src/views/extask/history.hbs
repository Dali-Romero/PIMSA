
<div class="row p-3" id="machine-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-clock-history"></i> Tareas</h1>
</div>
<div class="row p-4">
    <div class="row justify-content-between p-0 m-0" id="machine-add-title">
        <div class="col-md-8 p-2">
            <p class="fs-5 m-0">Historial de cotizaciones realizadas.</p>
        </div>
    </div>
</div>
<div class="row px-4 pt-0 pb-4">
    <div class="table-responsive-xxl p-0">
        <table class="table table-striped align-middle" id="hist-table">
            <thead>
                <tr>
                    <th scope="col">No. Cotización</th>
                    <th scope="col">Fecha y hora</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Monto total</th>
                    <th scope="col">Estatus</th>
                    <th scope="col">Elaboró</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each cotizaciones}}
                    <tr>
                        <th scope="row">
                            <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/quotations/info/{{cotId}}">
                                COT-{{cotId}}
                            </a>
                        </th>
                        <td>{{formatDateShort fecha}}</td>
                        <td class="text-start">
                            <div class="row">
                                <div class="col-md-12">
                                    <a  class="link-offset-2 link-offset-2-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/clients/editclient/{{clienteId}}">
                                        {{nombre}}
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td>$ {{formatNumber total}}</td>
                        {{#equal estatus "Ordenada"}}
                            <td class="text-success">{{estatus}}</td>
                        {{/equal}}
                        <td>{{empleado}}</td>
                        <th scope="row">
                            <a class="link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="orders/info/{{ordenId}}">
                                OT-{{ordenId}}
                            </a>
                        </th>
                    </tr>
                {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="7">No existen cotizaciones registradas</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>



<script>
    new DataTable('#hist-table', {
        paging: false,
        info: false,
        padding: false,
        order: [[1, 'Desc']],
        dom: '<"float-start pb-2"f><"button-add-quotation pb-2"B>', 
        columnDefs: [
            {className: "dt-center", targets: "_all"},
        ],
        
        language:{
            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json',
        },
    });
</script>
