<div class="row p-3" id="machine-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-shield-lock"></i> Roles</h1>
</div>
<div class="row p-4">
    <div class="row justify-content-between align-items-center p-0 m-0" id="machine-add-title">
        <div class="col-6">
            <p class="fs-5 p-2 m-0">Roles registrados</p>
        </div>
        <div class="col-6 text-end">
            <p class="fs-5 p-2 m-0">Total: {{total_roles.total_roles}}</p>
        </div>
    </div>
</div>
<div class="row px-4 pt-0 pb-4">
    <div class="table-responsive-xxl p-0">
        <table class="table table-striped align-middle" id="roles-table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                    <th scope="col">Estatus</th>
                    <th scope="col">Usuarios asignados</th>
                    <th scope="col">Permisos</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each roles}}
                    <tr>
                        <th scope="row">{{nombre}}</th>
                        <td>{{descripcion}}</td>
                        {{#if activo}}
                            <td class="text-success">Activo</td>
                        {{else}}
                            <td class="text-danger">Inactivo</td>
                        {{/if}}
                        <td>
                            <div class="row g-0">
                                <div class="col-md-4 col-12">
                                    <button class="btn btn-sm btn-outline-primary w-100" id="btnExpandAssignedUsers" value="{{rolId}}" type="button" data-bs-toggle="button" aria-pressed="true" aria-expanded="false"><i class="bi bi-person-fill-lock pe-2"></i>
                                        {{total_usuarios_rol}}
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="row g-0">
                                <div class="col-md-6 col-12">
                                    <button class="btn btn-sm btn-outline-primary w-100" id="btnExpandPermissions" value="{{rolId}}" type="button" data-bs-toggle="button" aria-pressed="true" aria-expanded="false"><i class="bi bi-shield-lock pe-2"></i>
                                        {{total_usuario_permisos}}/{{../total_permisos.total_permisos}}
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="row g-0 justify-content-center">
                                <div class="col-md-6 col-12">
                                    {{#checkPermission ../user.permisos "editRoles"}}
                                        <a href="/roles/edit/{{rolId}}" class="btn btn-sm btn-secondary w-100" role="button"><i class="bi bi-pencil-square"></i></a>
                                    {{else}}
                                        <span class="d-inline-block w-100" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                            <a href="/roles/edit/{{rolId}}" class="btn btn-sm btn-secondary w-100 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-pencil-square"></i></a>
                                        </span>
                                    {{/checkPermission}}
                                </div>
                            </div>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="6" class="text-center">No existen roles registrados</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Button (add role) that will be added when the table is rendered --}}
<div class="d-none" id="roles-add-button">
    {{#checkPermission user.permisos "addRoles"}}
        <a href="/roles/add" class="btn btn-outline-success border-success border-2 float-md-end mb-3 mb-md-0" role="button"><i class="bi bi-shield-lock"></i> Añadir rol</a>
    {{else}}
        <span class="d-inline-block float-md-end mb-3 mb-md-0" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
            <a href="/roles/add" class="btn btn-outline-success border-success border-2 disabled" role="button" tabindex="-1" aria-disabled="true"><i class="bi bi-shield-lock"></i> Añadir rol</a>
        </span>
    {{/checkPermission}}
</div>

{{!-- Templates --}}
<script type="text/x-handlebars-template" id="roles-users-expand">
    <div class="roles-users-slider" style="display: none;">
        <div class="row p-3 pb-0 m-0 text-center">
            <p class="fs-5 fw-bold p-1 m-0">Usuarios asignados \{{#with role}}a \{{nombre}} \{{/with}}</p>
        </div>
        <div class="row row-cols-2 row-cols-md-5 g-4 p-3 justify-content-md-start">
            \{{#each assignedUsers}}
                <div class="col">
                    <div class="card h-100 border-2" style="background-color: #f1f7fd; border-color: #75b2e5;">
                        <div class="row g-0 align-items-center h-100">
                            <div class="col-3 position-relative">
                                <i class="bi bi-person-fill-lock position-absolute top-50 start-50 translate-middle" style="font-size: 2.5em;"></i>
                            </div>
                            <div class="col-9">
                                <div class="card-body p-3 ps-0">
                                    \{{#checkPermission ../permisos "seeListEmployees"}}
                                        <a class="icon-link icon-link-hover link-underline link-underline-opacity-0 fw-medium" style="--bs-icon-link-transform: translate3d(0, -.15rem, 0); --bs-link-hover-color-rgb: 237, 10, 63;" href="/employees/info/\{{empleadoId}}">
                                            <i class="bi bi-box-arrow-in-up-right mb-1"></i>
                                            \{{Empleado}}
                                        </a>
                                    \{{else}}
                                        <span class="d-inline-block" tabindex="0" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="Acceso denegado">
                                            <a class="icon-link link-underline link-underline-opacity-0 fw-medium pe-none" style="--bs-link-opacity: .80;">
                                                <i class="bi bi-box-arrow-in-up-right mb-1"></i>
                                                \{{Empleado}}
                                            </a>
                                        </span>
                                    \{{/checkPermission}}
                                    <p class="card-text"><small class="fw-light">\{{Area}}</small></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            \{{else}}
                <div class="col-md-12">
                    <div class="card border-2" style="background-color: #f1f7fd; border-color: #75b2e5;">
                        <div class="card-body">
                            <p class="card-text text-center">No existen usuarios asignados a este rol</p>
                        </div>
                    </div>
                </div>
            \{{/each}}
        </div>
    </div>
</script>

<script type="text/x-handlebars-template" id="roles-permissions-expand">
    <div class="roles-permissions-slider" style="display: none;">
        <div class="row p-3 pb-0 m-0 text-center">
            <p class="fs-5 fw-bold p-1 m-0">Permisos \{{#with role}}del \{{nombre}} \{{/with}}</p>
        </div>
        <div class="row row-cols-2 row-cols-md-5 g-4 p-3 justify-content-md-start">
            \{{#each permissions}}
                <div class="col">
                    <div class="card border-2" style="background-color: #f1f7fd; border-color: #75b2e5;">
                        <div class="card-body">
                            <p class="card-text fw-medium"><i class="bi bi-shield-lock-fill"></i> \{{descripcion}}</p>
                        </div>
                    </div>
                </div>
            \{{else}}
                <div class="col-md-12">
                    <div class="card border-2" style="background-color: #f1f7fd; border-color: #75b2e5;">
                        <div class="card-body">
                            <p class="card-text text-center fw-medium">No existen permisos asignados a este rol</p>
                        </div>
                    </div>
                </div>
            \{{/each}}
        </div>
    </div>
</script>