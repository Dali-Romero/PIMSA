<div class="row p-3" id="machine-title">
    <h1 class="display-6 text-uppercase fw-semibold m-0"><i class="bi bi-bezier"></i> Procesos</h1>
</div>
<div class="row p-4">
    <p class="fs-5 p-2 m-0" id="machine-add-title">Procesos registrados</p>
</div>
<div class="row px-4 pt-0 pb-4">
    <div class="table-responsive-xxl p-0">
        <table class="table table-striped" id="processes-table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripci√≥n</th>
                    <th scope="col">Etapas</th>
                    <th scope="col">Productos</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each procesos}}
                    <tr>
                        <th scope="row">
                            {{proceso_nombre}}
                        </th>
                        <td>
                            bl
                        </td>
                        <td>
                            <div class="row g-0">
                                <div class="col-md-5 col-12">
                                    <button class="btn btn-sm btn-outline-primary w-100" id="btnExpandStages" value="{{proceso_id}}" type="button" data-bs-toggle="button" aria-pressed="true" aria-expanded="false">
                                        <i class="bi bi-bezier2 float-start"></i>
                                        {{total_areas}}
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="row g-0">
                                <div class="col-md-4 col-12">
                                    <button class="btn btn-sm btn-outline-primary w-100" id="btnExpandProducts" value="{{proceso_id}}" type="button" data-bs-toggle="button" aria-pressed="true" aria-expanded="false">
                                        <i class="bi bi-clipboard2 float-start"></i>
                                        {{total_productos}}
                                    </button>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="row g-0 justify-content-center">
                                <div class="col-md-6 col-12">
                                    <a href="/processes/edit/{{proceso_id}}" class="btn btn-sm btn-secondary w-100"><i class="bi bi-pencil-square"></i></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {{else}}
                    <tr>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td class="d-none"></td>
                        <td colspan="4">No existen procesos registrados</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{!-- Templates --}}
<script type="text/x-handlebars-template" id="processes-stages-expand">
    <div class="processes-stages-slider" style="display: none;">
        <div class="row p-3 pb-0 m-0 text-center">
            <p class="fs-5 fw-bold p-1 m-0">Etapas de \{{#with proceso}}\{{nombre}}\{{/with}}</p>
        </div>
        <div class="row row-cols-2 row-cols-md-6 g-4 p-3 justify-content-md-start">
            \{{#with etapas}}
                \{{#each orden_areas}}
                    <div class="col">
                        <div class="card bg-primary-subtle h-100">
                            <div class="row g-0 align-items-center h-100">
                                <div class="col-3">
                                    <p class="card-text fs-3 fw-bold text-center">\{{this}}</p>
                                </div>
                                <div class="col-9">
                                    <div class="card-body p-3 ps-0">
                                        <p class="card-text">\{{lookup ../areas @index}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                \{{else}}
                    <div class="col-md-12">
                        <div class="card bg-primary-subtle">
                            <div class="card-body">
                                <p class="card-text text-center">No existen etapas asignados a este proceso</p>
                            </div>
                        </div>
                    </div>
                \{{/each}}
            \{{/with}}
        </div>
    </div>
</script>

<script type="text/x-handlebars-template" id="processes-products-expand">
    <div class="processes-products-slider" style="display: none;">
        <div class="row p-3 pb-0 m-0 text-center">
            <p class="fs-5 fw-bold p-1 m-0">Productos asociados a\{{#with proceso}} \{{nombre}} \{{/with}}</p>
        </div>
        <div class="row row-cols-2 row-cols-md-5 g-4 p-3 justify-content-md-start">
            \{{#each productos}}
                <div class="col">
                    <div class="card bg-primary-subtle">
                        <div class="card-body">
                            <p class="card-text"><i class="bi bi-clipboard2"></i> \{{producto_nombre}}</p>
                        </div>
                    </div>
                </div>
            \{{else}}
                <div class="col-md-12">
                    <div class="card bg-primary-subtle">
                        <div class="card-body">
                            <p class="card-text text-center">No existen productos asignados a este proceso</p>
                        </div>
                    </div>
                </div>
            \{{/each}}
        </div>
    </div>
</script>